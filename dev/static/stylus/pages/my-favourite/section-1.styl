.my-favourite--page

  .breadcrumb-item a
    color rgba(40, 48, 55, 0.4)

  .breadcrumb-item+.breadcrumb-item::before
    color rgba(40, 48, 55, 0.4)

.my-favorit-baner
  width 100%
  max-width 150px
  margin-bottom 20px

.my-favorit-left
  text-align center
  background-color rgba(40, 48, 55, 0.03)
  border-radius 10px
  padding 30px
  margin-right 15px
  height max-content

.my-favorit-baner--name
  font-family 'Merriweather Bold',sans-serif
  font-size 19px
  color #283037
  margin-bottom 12px

.my-favorit--text
  color rgba(40, 48, 55, 0.61)
  font-size 14px
  font-family 'Roboto 400',sans-serif
  margin-bottom 30px

.my-favorit
  display flex
  padding-bottom: 50px;

.my-favorit-right .lobarel-tab-title
  margin-bottom 20px

.my-favorit-count-sort
  display flex
  justify-content space-between
  align-items center
  background-color: rgba(40, 48, 55, 0.03);
  border-radius: 5px;
  padding 0 0 0 10px
  margin-bottom 30px

.my-favorit-sort-wrap
  display flex
  height 45px
  position relative
  z-index 16

.my-favorit-sort-wrap--wrapper
  display flex
  align-items center
  position absolute
  right 0
  height 45px

  .select
    position inherit

.my-favorit-sort-wrap--wrapper.active
  background-color #fff
  box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.06);
  border-radius: 10px 10px 0 0;


.my-favorit-count-sort-span
  font-family 'Roboto 400',sans-serif
  font-size 14px
  color #283037

.my-favorit-sort-wrap-span
  font-family 'Roboto 400',sans-serif
  font-size 14px
  color rgba(40, 48, 55, 0.4)
  margin-left 20px
.my-favorit-sort-wrap

  .select-input
    max-width 150px
    min-width 150px
    height 30px
    border none
    padding 8px
    background-color transparent
    color #283037
    font-family 'Roboto 400',sans-serif
  .append-icon

    .icon
      fill rgba(40, 48, 55, 0.6)

  .onCF li ul
    margin-top 7px
    z-index -1
  .select-options
    box-shadow: 0px 0px 15px rgba(0,0,0,0.06);
    border-radius: 0 0 10px 10px;

    li
      border-radius: 5px;
      margin 10px
      width max-content
      margin-bottom 0
      padding 10px
      &:last-child
        margin-bottom 10px
  .selected
    background-color #FAACA8
    color #fff

.my-favourite--item-product
  box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.06);
  border-radius: 10px;
  margin-bottom 30px