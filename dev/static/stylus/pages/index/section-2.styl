.advantages
  background-color #283037
  padding 100px 0

.white-section-title
  color: #fff
.advantages-item-wrap
  margin-bottom 45px
  z-index 3

.p-22-5
  padding-left 22.5px
  padding-right 22.5px
.advantages-list
  margin-right -22.5px
  margin-left -22.5px
.advantages-item
  position relative
  display flex
  align-items center
  justify-content center
  flex-direction column
  box-shadow: 0px 0px 40px rgba(0, 0, 0, 0.15);
  border-radius: 10px;
  background-color #fff
  padding 50px 20px

  .icon
    size(70px)
    margin-bottom 30px
  &:after
    content ''
    position absolute
    right -15px
    bottom -15px
    background-color: #E9EAEB;
    box-shadow: 0px 0px 40px rgba(0, 0, 0, 0.15);
    border-radius: 10px;
    width: 100%
    height: 100%
    z-index -1

.advantages-text
  font-family: 'Merriweather Reg',sans-serif
  font-size 16px
  text-align center
.advantages .section-title
  margin-bottom 80px