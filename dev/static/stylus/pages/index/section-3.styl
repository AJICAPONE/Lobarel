.reviews
  padding 120px 0
  overflow hidden

.reviews .section-title
  margin-bottom 60px

.reviews-slider--wrapper
  display flex
  align-items center
  width 40%

.reviews-slider
  width 100%
  .slick-list
    border-radius 10px

.reviews-slider--img
  background-size cover
  background-position center
  background-repeat no-repeat
  width 100%
  height 380px

.reviews-arrows
  display flex
  align-items center
  justify-content space-between
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(8px);
  border-radius: 0px 10px;
  width 170px
  pointer-events none
  padding 15px 20px

.arrow-rew-slider
  display flex
  align-items center
  justify-content center
  pointer-events auto
  cursor pointer
  .icon
    size(16px)
    fill #fff

.reviews-slider--wrapper
  position relative

.reviws-controls
  position absolute
  bottom 0
  left 0

.review-slider-dots--wrap ul
  display flex
  align-items center

.review-slider-dots--wrap li
  background-color #fff
  opacity 0.6
  size(6px)
  display block
  margin-right 10px
  border-radius 50%
  cursor pointer
  transition all linear .2s

  &:last-child
    margin-right 0

.review-slider-dots--wrap
  pointer-events auto
.review-slider-dots--wrap li.slick-active
  background-color #fff
  size(8px)
  opacity 1
  border-radius 50%

.review-slider-dots--wrap li a
  background-color #fff
  size(100%)
  display block
  border-radius 50%
.reviews-container
  display flex
  align-items center
  margin-bottom 60px

.lobarel-added-review
  width 100%
  max-width 230px
  margin-bottom 40px

#add-review-modal,#add-review-modal-non-reg
  .modal-dialog
    max-width 700px
  .popup-rev--title
    font-family 'Merriweather Bold',sans-serif
    font-size 18px
    color #283037
    text-align center

#rateYo5
  .jq-ry-normal-group
    filter: grayscale(1);
  .jq-ry-rated-group
    filter none;

.popup-input-review__wrap
  display flex
  align-items center
  margin-bottom 30px
  justify-content space-between

  .popup-inputs--item
    margin-bottom 0
    width 48%


.reviews-slider-comment-name-rating
  display flex
  justify-content space-between
  margin-bottom 40px

.reviews-slider-comment-name
  font-family 'Merriweather Bold',sans-serif
  font-size 20px
  color #283037
.reviews-slider-comment--wrap
  position relative
  z-index 2
  margin-left -70px
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;

.reviews-slider-comment
  position: absolute;
  width: 100%;
  text-align: center;
  padding: 30px;
  background-color: #fff;

  //max-width: 370px;
  box-shadow: 0px 0px 40px rgba(0, 0, 0, 0.1);
  border-radius: 10px;

  &:before
    content: '';
    position: absolute;
    background-image: url(/static/img/content/flower.png);
    background-size: contain;
    width: 220px;
    height: 286px;
    z-index: -1;
    right: -78px;
    background-repeat: no-repeat;
    top: -55px;

  &:after
    content: '';
    position: absolute;
    right: -15px;
    bottom: -15px;
    background-color: #fff;
    box-shadow: 0px 0px 40px rgba(0, 0, 0, 0.1);
    border-radius: 10px;
    width: 100%;
    height: 100%
    z-index: -2;

.review-comment-text
  font-family 'Roboto 400',sans-serif
  font-size 16px
  text-align left
  color rgba(40, 48, 55, 0.6)

.reviews-cav
  position absolute
  top 35px
  left 30px
  pointer-events none

  .icon
    size(70px)
    fill #fff
    opacity 0.6

.index-page .reviews
  overflow hidden