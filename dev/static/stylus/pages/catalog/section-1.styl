.catalog-title-wrap
  display flex
  align-items center
  justify-content space-between
.catalog-title-sort
  font-family 'Open Sans 400',sans-serif
  font-size 14px
  color #283037


  span
    font-family 'Open Sans 400',sans-serif
    font-size 14px
    color rgba(40, 48, 55, 0.6)
    margin-right: 12px
    cursor pointer

    &:last-child
      margin-right: 0

    &:first-child
      margin-left 15px

.catalog-title-sort span.active
  color #FAACA8

.catalog
  .breadcrumb-item a
    color rgba(40, 48, 55, 0.4)
  .breadcrumb-item+.breadcrumb-item:hover::before
    color rgba(40, 48, 55, 0.4)

.filter-title
  font-family 'Merriweather Bold',sans-serif
  font-size 20px
  color #283037
  text-align left
  margin-bottom 20px

.filter-choise-skin
  display flex
  padding 10px 15px
  background: rgba(40, 48, 55, 0.05);
  border-radius: 5px;
  width max-content
  align-items center
  margin-bottom 30px
  span
    font-family 'Open Sans 400',sans-serif
    font-size 14px
    color rgba(40, 48, 55, 0.61)
    margin-right 10px

.filter-choise-skin-close
  display flex
  align-items center
  justify-content center
  cursor pointer

  .icon
    size(9px)
    fill rgba(40, 48, 55, 0.61)

.filter-section-title
  font-family 'Open Sans 600',sans-serif
  font-size 16px
  text-align left
  display flex
  margin-bottom 15px

.filter-left
  padding 20px

.filter-type-skin-item
  text-align left
  display flex
  align-items center
  margin-bottom 10px
.filter-type--input
  display none

.filter-type-select
  display flex
  align-items center
  cursor pointer

.filter-type-dot
  background: #fbfbfb;
  border: 1px solid rgba(40,48,55,0.1);
  width: 19px;
  height: 19px;
  border-radius: 50%;
  margin-right: 15px;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 1;


.filter-type-select.checked .filter-type-dot
  background-color transparent

.filter-type-select.checked .filter-type-dot:before
  content: '';
  position: absolute;
  width: 16px;
  height: 16px;
  background: #faaca8;
  border-radius: 50%;
  box-shadow: 0px 0px 0px 3px rgba(250,172,168,0.3);

.filter-type-name
  font-family 'Open Sans 400',sans-serif
  font-size 14px
  color rgba(40, 48, 55, 0.6)

.filter-show-all
  display none


.filter-category-watch-all
  text-align left
  color #FAACA8
  font-family 'Open Sans Reg',sans-serif
  font-size 14px
  border-bottom 1px solid #FAACA8
  width max-content
  line-height 1

.filter-type-skin
  margin-bottom 30px

#filter-effect-cream .filter-type-dot
  background: #fbfbfb;
  border: 1.5px solid rgba(40,48,55,0.1);
  width: 19px;
  height: 19px;
  margin-right: 15px;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 1;
  border-radius 0
#filter-effect-cream .filter-type-select.checked .filter-type-dot
  border: 1.5px solid #faaca8
#filter-effect-cream .filter-type-select.checked .filter-type-dot:before
  content: '';
  position: absolute;
  left: 3.5px;
  top: 8px;
  background: #FAACA8;
  width: 2px;
  height: 2px;
  box-shadow: 2px 0px 0 #FAACA8, -2px 0px 0 #FAACA8, 4px 0 0 #FAACA8, 4px -2px 0 #FAACA8, 4px -4px 0 #FAACA8, 4px -6px 0 #FAACA8, 4px -8px 0 #FAACA8, 4px -10px 0 #FAACA8;
  transform: rotate(45deg);

.filter--price-js
  background: rgba(40, 48, 55, 0.03) !important
  border-radius: 3.5px !important
  border none !important
  height 7px !important
  margin-bottom 35px

  .ui-slider-range
    background #FAACA8
    opacity 1

  .ui-slider-handle
    width 19px !important
    height 19px !important
    background: #FAACA8 !important
    box-shadow: 0px 0px 5px #FAACA8 !important
    border-radius 50%
    border none !important
    outline none
    cursor pointer !important

    &:hover
      text-decoration none
      outline none

.filter--price--inputs
  display flex
  justify-content space-between

.sliders-filters
  width 100px
  border none
  background: rgba(40, 48, 55, 0.05);
  border-radius: 5px;
  height 47px
  padding 14px
  font-family 'Open Sans 500',sans-serif
  font-size 14px
  color #283037

  &:placeholder
    color rgba(40, 48, 55, 0.6)

.filter--label-input
  display flex

.filter-price-to
  display flex
  align-items center
  justify-content center
  margin 0 11px

.filter-button-submit
  font-family 'Merriweather Bold',sans-serif
  font-size 13px
  color #ff
  background-color #283037
  width 170px
  text-align center
  padding 16px 0
  text-transform uppercase
  margin 0 auto
  cursor pointer
  border none
  height 47px

.catalog-products-list
  margin-bottom 30px


