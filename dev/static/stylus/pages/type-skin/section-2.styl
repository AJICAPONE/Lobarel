.type-skin-care
  padding 80px

.section-title3
  font-family 'Merriweather Bold',sans-serif
  font-size 30px
  color #283037
  text-align center
  margin-bottom 20px

.section-text3
  font-family 'Roboto 400',sans-serif
  font-size 15px
  color rgba(40, 48, 55, 0.6)
  text-align center
  width 830px
  margin 0 auto
  margin-bottom 120px

.type-skin-care--item
  display flex
  background-color #FFF
  box-shadow: 0px 0px 40px rgba(0, 0, 0, 0.1);
  border-radius: 10px;
  padding 17px 30px
  margin-bottom 160px
  position relative

  &:nth-child(2n)
    flex-flow row-reverse

  &:before
    content: '';
    position: absolute;
    top: 15px;
    right: -15px;
    background-color: #fff;
    -webkit-box-shadow: 0px 0px 40px rgba(0,0,0,0.1);
    box-shadow: 0px 0px 40px rgba(0,0,0,0.1);
    border-radius: 10px;
    width: 100%;
    height: 100%;
    z-index: -1;

  &:last-child
    margin-bottom 0



.type-skin-care--item__left
  text-align center
  span
    font-family 'Merriweather Bold',sans-serif
    font-size 14px
    color #283037
    text-align center

.type-skin-care--item__img
  background-repeat no-repeat
  background-size contain
  width 100%
  height 312px
  margin-top -60px
  margin-bottom 12px
  border-radius 10px

.type-skin-care-title
  font-family 'Merriweather Bold',sans-serif
  font-size 20px
  color #283037
  margin-bottom 20px

.type-skin-care-text
  font-family 'Roboto 300',sans-serif
  font-size 14px
  color rgba(40, 48, 55, 0.6)
  margin-bottom 30px

.type-skin-care-atten
  font-family 'Roboto 400',sans-serif
  font-size 14px
  color #283037
  display block
  margin-bottom 30px

.type-skin-care-atten-text
  font-family 'Roboto 400',sans-serif
  font-size 14px
  color rgba(40, 48, 55, 0.6)
  margin-left 5px

.type-skin-care--right-button
  width 270px


.popup-body p
  font-family 'Merriweather Bold',sans-serif
  font-size 22px
  color #283037
  margin-bottom 40px


.recommend-item-popup
  font-family 'Roboto 400',sans-serif
  font-size 16px
  color rgba(40, 48, 55, 0.61)
  margin-bottom 30px
  position relative
  display flex

  &:before
    content ''
    display block
    position relative
    background-color #FAACA8
    width 100%
    height 12px
    max-width 12px
    box-shadow 0 0 0 4px rgba(250, 172, 168, 0.31)
    border-radius 50%
    margin-right 13px
    margin-top 6px

#modal-recommend .modal-dialog
  max-width 830px