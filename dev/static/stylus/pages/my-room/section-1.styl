.my-room-left
  padding-left 0
.my-room
  padding-bottom 120px
.my-room-exit
  background-color #fff
  box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.05);
  border-radius: 5px;
  color #FF2323
  font-family 'Merriweather Bold',sans-serif
  font-size 14px
  height 47px
  width 100%
  cursor pointer
  text-align center
  display flex
  align-items center
  justify-content center

.my-room-item
  font-family 'Roboto 400',sans-serif
  font-size 15px
  color rgba(40, 48, 55, 0.61)
  margin-bottom 20px
  cursor pointer
  display block
  &:last-child
    margin-bottom 0

  &:hover
    outline none
    color #FAACA8
    text-decoration none

.my-room-wrapper
  display flex

.my-room-added-adress
  width 100%
  display flex
  align-items center
  justify-content center
  font-family 'Merriweather Bold',sans-serif
  font-size 16px
  color #283037
  padding 22px 0
  border: 1.5px dashed rgba(40, 48, 55, 0.1);
  border-radius: 5px;
  cursor pointer
  margin-bottom 50px

.my-room-select-field
  width 47%

.inputs-lobarel
  cursor auto

.my-room-item.active
  color #FAACA8

.my-room-order
  border-spacing 0 15px
  border-collapse separate
  tbody
    tr
      height 51px
      background: rgba(40, 48, 55, 0.02);
      border-radius: 5px;
      margin-bottom 15px
  th
    width 13%
    padding-left 15px
    font-family 'Open Sans 600',sans-serif
    font-size 12px
    color #283037
    padding-bottom 0
  tr

    td
      padding-left 15px
      font-family 'Open Sans 400',sans-serif
      font-size 14px
      color rgba(40, 48, 55, 0.6)
    td:first-child
      border-top-left-radius: 5px;
      border-bottom-left-radius: 5px;
    td:last-child
      border-top-right-radius: 5px;
      border-bottom-right-radius: 5px;

.my-room-table-more
  display flex
  align-items center
  justify-content center
  font-family 'Open Sans 400',sans-serif
  font-size 14px
  color #283037
  height 41px
  background: rgba(40, 48, 55, 0.05);
  border-radius: 5px;
  text-align center
  text-decoration none
  outline none
  margin-right 5px

  &:hover
    text-decoration none
    outline none
    color #283037

.my-room-offer-top--wrap
