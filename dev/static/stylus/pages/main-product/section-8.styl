.video-cream--wrapper
  display flex
  margin 0 -15px
  .section-title
    text-align left
    margin-bottom 30px
  .section-text
    text-align left
    width 470px
    margin-bottom 60px

.video-cream-play
  position relative
  background-color: #FFFFFF;
  box-shadow: 0px 0px 40px rgba(0, 0, 0, 0.2);
  border-radius: 10px;
  padding 10px

  &:before
    content: '';
    position: absolute;
    top: 15px;
    right: -15px;
    background-color: #fff;
    box-shadow: 0px 0px 40px rgba(0,0,0,0.1);
    border-radius: 10px;
    width: 100%;
    height: 100%;
    z-index: -1;
.video-cream-play-img
  &:after
    content: '';
    position: absolute;
    background-image: url(/static/img/content/flower.png);
    background-size: contain;
    width: 310px;
    height: 100%;
    z-index: -1;
    right: -105px;
    background-repeat: no-repeat;
    top: -80px;

  &:before
    content: '';
    position: absolute;
    left: -255px;
    bottom: -70px;
    width: 424px
    height: 170px
    background-image: url(/static/img/general/pluw2.png);
    background-size: contain;
    background-repeat: no-repeat;
    z-index: -2;

.video-fancybox--img
  width 100%
  position relative

.video-fancybox--play__icon
  absolute-center()
  background-color #FAACA8
  size(68px)
  box-shadow 0 0 0 6px rgba(250, 172, 168, 0.5)
  border-radius 50%
  z-index 5
  display flex
  justify-content center
  align-items center

  .icon
    size(18px)
    fill rgba(255, 255, 255, 0.51)


.video-cream
  padding-bottom 120px
  overflow hidden
  padding-top 60px
