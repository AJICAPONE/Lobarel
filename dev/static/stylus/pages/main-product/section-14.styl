.js-slider-podoidut-z2
  display: flex;
  background-color: #fff;
  box-shadow: 0px 0px 40px rgba(0,0,0,0.15);
  border-radius: 10px;
  padding: 30px 0;
  position: relative;
  padding-bottom: 0;

  &:before
    content: '';
    position: absolute;
    background-image: url(/static/img/content/flower.png);
    background-size: contain;
    width: 340px;
    height: 100%;
    z-index: -1;
    right: -132px;
    background-repeat: no-repeat;
    top: -105px;

  &:after
    content: '';
    position: absolute;
    right: -15px;
    bottom: -15px;
    z-index: -2;
    width: 100%;
    height: 100%;
    background-color: #e9eaeb;
    box-shadow: 0px 0px 40px rgba(0,0,0,0.15);
    border-radius: 10px;

.js-slider-podoidut--prev2
  margin-right: 40px;

