.lobarel-cream-tabs
  display flex
  align-items center
  justify-content space-between
  margin-bottom 40px
  .slick-list
    padding 0 !important


.lobarel-cream-wrapper
  position relative
  padding 40px 45px
  box-shadow: 0px 0px 40px rgba(0, 0, 0, 0.1);
  border-radius: 10px;
  background-color #fff



  &:after
    content ''
    position absolute
    top 15px
    right -15px
    background-color #fff
    box-shadow: 0px 0px 40px rgba(0, 0, 0, 0.1);
    border-radius: 10px;
    width: 100%
    height 100%
    z-index -1

.lobarel-cream-tab
  position relative
  display flex
  font-family 'Merriweather Bold',sans-serif
  font-size 13px
  color rgba(40, 48, 55, 0.5)
  text-transform uppercase
  width max-content !important
  padding 15px 30px
  text-align center
  cursor pointer
  background-position: left bottom;
  background: linear-gradient(to left, #FAACA8  50%, #fff 50%);
  transition: all 1s ease;
  background-size: 200% 100%;

  &:focus
    outline none





.lobarel-cream-tab.active
  box-shadow: 0px 0px 14px #FAACA8;
  color #fff
  background-position: right bottom;

.lobarel-cream-info
  display none
  margin 0 -15px

.lobarel-cream-info.active
  display flex

.lobarel-tab-title
  font-family 'Merriweather Bold',sans-serif
  font-size 24px
  color #283037
  margin-bottom 30px

.lobarel-tab-text
  font-family 'Roboto 400',sans-serif
  font-size 16px
  color rgba(40, 48, 55, 0.6)
  margin-bottom 20px

  span
    font-family 'Roboto 500',sans-serif
    color #283037



.lobarel-cream-tab--img
  background-repeat no-repeat
  background-size contain
  background-position center
  width 100%
  height 100%
  margin: 0 0 0 auto;
  padding-left 30px

.lobarel-cream-info-buy
  display flex
  justify-content space-between
  align-items center
  margin-top 50px



.lobarel-cream
  padding-bottom 120px


