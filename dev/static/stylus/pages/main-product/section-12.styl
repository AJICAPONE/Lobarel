.index-video
  padding 60px 0
  overflow hidden
.index-video-title--link__wrap
  display flex
  justify-content center
  align-items center
  position relative
  margin-bottom 40px

.index-video-review__link
  position absolute
  right 0
  font-family "Open Sans SB",sans-serif
  font-size 16px
  color #F37535;
  border-bottom 1.2px dotted #F37535;

  &:hover
    text-decoration none
    border-bottom 1.2px dotted #fdc630;

.index-video-title
  margin-bottom 0








.index-video-slider .slick-list {
  padding-top: 6%!important;
  padding-bottom: 6%!important;
  padding-left: 15%!important;
  padding-right: 15%!important;
}

.index-video-slider-dots--wrap .slick-dots {
  text-align: right;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}

.index-video-slider .slick-track {
  max-width: 100%!important;
  transform: translate3d(0, 0, 0)!important;
  perspective: 100px;
}

.index-video-slider-item {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  opacity: 0;
  width: 100%!important;
  transform: translate3d(0, 0, 0);
  transition: transform 1s, opacity 1s;
  outline none
  cursor pointer
}

.slick-snext,
.slick-sprev {
  display: block;
}

.index-video-slider .slick-current {
  opacity: 1;
  position: relative;
  display: block;
  //transform: translate3d(0, 0, 12px);
  transform scale(1.12)
  z-index: 2;
}

.slick-snext {
  opacity: 1;
  transform: translate3d(28.8%, 0, 0px);
  z-index: 1;
}

.slick-sprev {
  opacity: 1;
  transform: translate3d(-28.8%, 0, 0px);
}
.index-video-slider-source
  display: block;
  width: 70%
  margin 0 auto
  height: 340px;
  border 8px solid #fff
  background-color #fff
  box-shadow: 0px 0px 40px rgba(0, 0, 0, 0.1);
  border-radius: 10px;
  background-size cover
  background-position center
  background-repeat no-repeat
  outline none
  position relative

.index-video-slider .slick-list
  margin 0 -45px
.preload
  background-size cover
  position: absolute;
  display: flex;
  justify-content center
  align-items center
  width: 83.5%;
  margin: 0 auto;
  height: 365px;
  top: 8px;
  right: 0;
  left: 0;
  bottom: 0;
  z-index 2

.icon-preload
  absolute-center()
  display flex
  justify-content center
  align-items center
  size(100%)
  &:after
    content ''
    position absolute
    display flex
    justify-content center
    align-items center
    background: #FAACA8
    size(60px)
    border-radius 50%
    box-shadow 0 0 0 5px rgba(250, 172, 168, 0.51)


  .icon
    size(14px)
    opacity 1
    z-index 2


.index-video-slider--wrapper
  position relative
  margin-bottom 60px
  &:before
    content ''
    absolute-center()
    box-shadow: 0px 0px 20px 50px rgba(255, 255, 255, 1);
    width 90%
    height 50%
    background-color #fff
    z-index 0
    border-radius 10px


.index-video-slider

  &:before
    content ''
    position absolute
    right: -165px;
    top: 6px;
    background-image url("/static/img/general/pluw4.png")
    background-repeat no-repeat
    background-size contain
    width 334px
    height 134px
    z-index -1

  &:after
    content ''
    position absolute
    left: -222px;
    bottom: 50px;
    background-image url("/static/img/general/pluw4.png")
    background-repeat no-repeat
    background-size contain
    width 334px
    height 134px
    transform: rotate(135deg);
    z-index: -1;

.index-video-slider__controls
  display flex
  justify-content space-between
  absolute-center()
  width 100%

.index-video-slider__controls
  pointer-events none

.index-video--controls
  position relative
  background: rgba(43, 47, 63, 0.4);
  backdrop-filter: blur(4px);
  size(50px)
  border-radius 50%
  pointer-events auto
  cursor pointer

  .icon
    absolute-center()
    size(16px)
    fill #fff
    transition all linear .1s

  &:hover
    .icon
      fill #F89D32

.index-video-slider-dots--wrap
  display flex
  width 100%
  justify-content center
  align-items center

  ul
    display flex
    justify-content center

  li
    margin-right 20px
    cursor pointer
    &:last-child
      margin-right 0

.index-video-slider__dots
  background-color rgba(40, 48, 55, 0.6)
  size(8px)
  border-radius 50%
  display block
  position relative

li.slick-active .index-video-slider__dots
  background-color: #283037
  transition all linear .4s
  transform scale(1.3)

.video-title
  margin-bottom 10px