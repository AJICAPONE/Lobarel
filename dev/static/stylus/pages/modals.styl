.popup-header
  display flex
  flex-direction column
  padding 30px
.modal-content
  box-shadow: 0px 0px 30px rgba(0, 0, 0, 0.15);
  border-radius: 10px;
  border none
.popup-title
  font-family 'Merriweather Bold',sans-serif
  font-size 24px
  text-align center
  color #283037
.popup-close
  text-align right
  width: max-content;
  position: relative;
  right: 0;
  margin: 0px 0px 0 auto;
  outline none !important
  text-decoration none
  opacity 1

  &:hover
    outline none
    text-decoration none
    opacity 1

    .icon
      fill #283037

  .icon
    size(18px)
    fill #283037
    opacity 1

.popup-body
  padding 30px 60px

.popup-inputs--item
  display flex
  flex-direction column
  margin-bottom 30px

  &:last-child
    margin-bottom 0

  label
    font-family 'Open Sans 600',sans-serif
    font-size 12px
    color #283037
    margin-bottom 5px

.popup-footer
  padding 30px 0

.w-230
  width 230px
  border none
  border-bottom 2px solid #FAACA8
  margin 0 auto
  margin-bottom 20px


.popup-input
  background-color #FBFBFB
  border: 2px solid rgba(40, 48, 55, 0.03);
  border-radius: 5px;
  height 47px
  padding 14px 15px
  font-family 'Open Sans 400',sans-serif
  font-size 14px
  color rgba(40, 48, 55, 0.61)

.popup-have-acc
  display flex
  align-items center
  justify-content center

  span
    font-family 'Open Sans 600',sans-serif
    font-size 14px
    color #283037
    margin-right 3px

  a
    font-family 'Open Sans 600',sans-serif
    font-size 14px
    color #FAACA8

.login-acc
  cursor pointer